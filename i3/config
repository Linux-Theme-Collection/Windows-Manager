# 窗口颜色
client.focused               	#121212 #101010 #9e8a8e
client.focused_inactive 	#101010 #191919 #999999
client.unfocused           	#101010 #191919 #999999
client.urgent                 	#cd989a #cd989a #2e3436

client.background		#1d1d1d
hide_edge_borders smart
default_border  pixel 4
default_floating_border pixel 4

# Gapps 如果不是i3-gaps可以放心的删除
#smart_gaps on
#smart_borders on

# 具体配置说明请看 https://i3wm.org/docs/userguide.html

#设置Mod键 这里为Super/Win键
set $mod Mod4

# 全局字体
font pango:Ubuntu Mono Bold 12

# 使用Mod键+鼠标拖拽悬浮窗口
floating_modifier $mod

# 打开终端（推荐termite）
bindsym $mod+Return exec termite

# 杀死当前窗口
bindsym $mod+Shift+q kill

# 运行Rofi快速运行软件，当然你也可以用dmenu，但是Rofi更好看呀 （逃
bindsym $mod+d exec --no-startup-id rofi -show run -display-run ""

# 移动焦点窗口
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# 同上
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# 移动工作区
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# 同上
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# 水平方向分割
bindsym $mod+h split h

# 垂直方向分割
bindsym $mod+v split v

# 全屏
bindsym $mod+f fullscreen toggle

# 更改布局 (堆叠, 标签, 分割)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# 悬浮窗口
bindsym $mod+Shift+space floating toggle

# 改变焦点
bindsym $mod+space focus mode_toggle

# 集中父窗口
bindsym $mod+a focus parent

# 集中子窗口
#bindsym $mod+d focus child

#工作区名称

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 0

#切换工作区
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

#移动工作区
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

#重载配置
bindsym $mod+Shift+c reload
#重启i3
bindsym $mod+Shift+r restart

#退出动作
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'What do you want to do' -b 'Lock' 'dm-tool lock' -b 'Exit' 'i3-msg exit' -b 'Hibernate' 'sudo pm-hibernate' -b 'Shutdown' 'sudo shutdown -h now' -b 'Reboot' 'sudo reboot'"

# 注mod1 是 左 Alt 键
#bindsym mod1+l exec lock
bindsym mod1+l exec ~/.config/i3/lock

#音量
bindsym XF86AudioRaiseVolume exec "amixer -c 1 sset 'Master' 5%+"
bindsym XF86AudioLowerVolume exec "amixer -c 1 sset 'Master' 5%-"
bindsym XF86AudioMute exec amixer -q set Master toggle

#键盘背光
bindsym XF86KbdBrightnessDown exec "sudo echo 0 > /sys/class/leds/asus::kbd_backlight/brightness"
bindsym XF86KbdBrightnessUp exec "sudo echo 1 > /sys/class/leds/asus::kbd_backlight/brightness"

#屏幕亮度
bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 5
bindsym XF86MonBrightnessDown exec /usr/bin/xbacklight -dec 10

#截图
#bindsym Print exec scrot ~/Pictures/Screenshot/%Y_%m_%d_%H_%M_%S.png
bindsym Print exec flameshot gui

#调整窗口大小
mode "resize" {
#	进入resize模式之后才能更改
#	通过j k l ; 更改大小
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

#	通过方向键更改大小
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

#	恢复正常大小
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#状态栏
bar {
	position bottom
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
#	想让bar透明可以去掉下面一行的注释，不过托盘可能显示不完美
#	i3bar_command i3bar -t
#	status_command i3status
	font pango:Noto Mono 11
	strip_workspace_numbers yes
	separator_symbol "//"
#	非i3-gaps请删除下面这一行
#	height 28
	colors {
#		想让bar变透明还需要去掉下面一行的注释并注释它下面的一行
#		background  #1d2021A0
		background  #212121
        	statusline  #DDDDDD
        	separator   #7addda
        	focused_workspace   #2B83A6 #2B83A6 #DDDDDD
        	active_workspace    #212121 #212121 #DDDDDD
        	inactive_workspace  #212121 #212121 #DDDDDD
		urgent_workspace #D64E4E #D64E4E #DDDDDD
        }
}

